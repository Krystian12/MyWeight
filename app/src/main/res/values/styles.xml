<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="text_primary">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>

    <style name="info_text_title">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="button_accent">
        <item name="android:background">@color/accent</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_button" parent="text_primary">
        <item name="android:minWidth">80dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_inside_button_selector</item>
    </style>

</resources>
